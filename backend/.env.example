# Application Settings
ENVIRONMENT=development
SECRET_KEY=change-this-to-a-secure-random-string

# Database
DATABASE_URL=sqlite:///./pyconnect.db

# CORS (comma-separated list of allowed origins)
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# LDAP Configuration (optional)
AUTH_METHOD=ldap  # Set to 'ldap' to enable LDAP authentication
LDAP_SERVER_URI=ldap://openldap:389
LDAP_BIND_DN=cn=admin,dc=example,dc=com
LDAP_BIND_PASSWORD=admin
LDAP_USER_SEARCH_BASE=ou=users,dc=example,dc=com
LDAP_USER_DN_TEMPLATE=uid=%(user)s,ou=users,dc=example,dc=com

# Docker Configuration
BACKEND_PORT=8000
FRONTEND_PORT=3000

# Logging
LOG_LEVEL=INFO

# Session Settings
SESSION_SECRET=change-this-to-a-secure-random-string
SESSION_LIFETIME=3600  # in seconds
